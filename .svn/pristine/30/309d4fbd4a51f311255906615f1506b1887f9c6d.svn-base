	margin-top: 10px;
}

/*dibu*/
/*.dibu{margin-top: 94px; position: relative;}
.div_p{width: 94%;position: absolute;left: 3%;top: 5px;}*/
.dibu_di {
	margin-top: 15%;
}

.dibu_di img {
	bottom: 0;
	position: absolute;
}

.dibu_di .div_button {
	padding: 8px 35px;
	border: none;
	background: #0066c0;
	color: #fff;
	border-radius: 3px;
	position: absolute;
	bottom: 12px;
	right: 20px;
}

/*点击弹出编辑框*/
.kuang p {
	margin: 0;
	padding: 0; /*float: left;display: inline-block;*/
}

.kuang .login-put {
	clear: both;
	line-height: 30px;
	margin-bottom: 20px;
	overflow: hidden;
	width: 900px;
}

.kuang .login-put label {
	padding: 8px 0 8px 0px;
	color: #333;
	float: left;
	font-size: 13px;
	height: 13px;
	line-height: 13px;
	text-align: right;
	/* width: 128px; */
	font-weight: bold;
}

.kuang .login-put .label_1 {
	width: 40%;
	text-align: left;
}

.kuang #form1 {
	float: left; /*width:320px*/
}

.kuang #form1 label {
	/* margin-left: 10%; */
	float: left;
	text-align: left;
	width: 150px;
}

.kuang input {
	cursor: pointer;
	vertical-align: middle;
}

.kuang .login-put #div1 {
	padding-left: 32%;
}

.kuang .login-put #div1 textarea {
	outline: none;
	border: 1px solid #dddddd;
	color: #999999;
	float: left;
	height: 139px;
	line-height: 22.5px;
	resize: none;
	font-size: 12px;
	margin-left: 10px;
	padding: 0 5px;
	width: 290px;
}

.kuang .login-put #div2 {
	padding-left: 32%;
}

.form-kong {
	display: block;
	width: 99%;
	padding: 3px 0px 3px 0px;
	font-size: 12px;
	line-height: 22.5px;
	color: #555;
	background-color: #fff;
	background-image: none;
	border: 1px solid #dddddd;
	border-radius: 2px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	-webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow
		ease-in-out .15s;
	-o-transition: border-color ease-in-out .15s, box-shadow ease-in-out
		.15s;
	transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s
}

.form-kong:focus {
	border-color: #66afe9;
	outline: 0;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px
		rgba(102, 175, 233, .6);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px
		rgba(102, 175, 233, .6)
}

.form-control {
	display: block;
	width: 100%;
	padding: 3px 0px 3px 0px;
	font-size: 12px;
	line-height: 22.5px;
	color: #555;
	background-color: #fff;
	background-image: none;
	border: 1px solid #dddddd;
	border-radius: 2px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	-webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow
		ease-in-out .15s;
	-o-transition: border-color ease-in-out .15s, box-shadow ease-in-out
		.15s;
	transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s
}

.form-control:focus {
	border-color: #66afe9;
	outline: 0;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px
		rgba(102, 175, 233, .6);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px
		rgba(102, 175, 233, .6)
}

