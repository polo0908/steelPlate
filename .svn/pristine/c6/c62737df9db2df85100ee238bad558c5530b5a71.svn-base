@charset "utf-8";

body {
	font: 14px/24px arial, "\5b8b\4f53", sans-serif, "Microsoft YaHei",
		tahoma;
	color: #333;
}

* {
	margin: 0 0;
	padding: 0 0;
	text-decoration: none;
}
/*all_box*/
.all_box {
	border: 1px solid #e7e7e7;
	width: 1000px; /*height:580px;*/
	border-radius: 10px;
	margin: 0 auto;
	margin-top: 200px;
	position: relative;
}
/*fanhui*/
.fanhui {
	padding-top: 15px;
	padding-left: 35px;
	float: left;
}

.fanhui_a {
	vertical-align: middle;
	text-decoration: none;
}
/*wenzimokuai*/
.wenzimokuai {
	margin-left: 35px;
	margin-top: 25px;
	width: 100%;
	display: inline-block;
	padding-bottom: 60px;
}

.wenzimokuai .wenzi_h2 {
	color: #ff8c00;
	font-size: 19px;
	margin: 0 0;
}
/*dt_dd*/
.dt_dd {
	width: 100%;
	margin-top: 35px;
}

/*kuang*/
.kuang {
	margin-top: 20px;
}

.kuang .name {
	float: left;
	font-size: 13px;
	font-weight: bold;
	color: #333;
	line-height: 30px;
	width: 20%;
}

.kuang input {
	float: left;
	margin-left: 10%;
}

.kuang .bitian {
	margin-left: 1%;
	/* float: right; */
	font-size: 20px;
	font-weight: bold;
	color: #be0029;
	display: inline-block;
	line-height: 30px;
}

.kuang .tishiwenzi {
	font-size: 13px;
	font-weight: normal;
	color: #666;
}

.shanghai {
	display: block;
	width: 15%;
	padding: 3px 0px 3px 0px;
	font-size: 12px;
	line-height: 22.5px;
	color: #555;
	background-color: #fff;
	background-image: none;
	border: 1px solid #dddddd;
	border-radius: 2px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	-webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow
		ease-in-out .15s;
	-o-transition: border-color ease-in-out .15s, box-shadow ease-in-out
		.15s;
	transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s
}

.shanghai:focus {
	border-color: #66afe9;
	outline: 0;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px
		rgba(102, 175, 233, .6);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px
		rgba(102, 175, 233, .6)
}
/*点击弹出编辑框*/
.kuang p {
	margin: 0;
	padding: 0; /*float: left;display: inline-block;*/
}

.kuang .login-put {
	clear: both;
	line-height: 30px;
	margin-bottom: 20px;
	overflow: hidden;
	width: 900px;
}

.kuang .login-put label {
	padding: 8px 0 8px 0px;
	color: #333;
	float: left;
	font-size: 13px;
	height: 13px;
	line-height: 13px;
	text-align: right;
	/* width: 128px; */
	font-weight: bold;
}

.kuang .login-put .label_1 {
	width: 40%;
	text-align: left;
}

.kuang #form1 {
	float: left; /*width:320px*/
}

.kuang #form1 label {
	/* margin-left: 10%; */
	float: left;
	text-align: left;
	width: 150px;
}

.kuang #form2 {
	float: left; /*width:320px*/
}

.kuang #form2 label {
	/* margin-left: 10%; */
	float: left;
	text-align: left;
	width: 150px;
}

.kuang input {
	cursor: pointer;
	vertical-align: middle;
}

.kuang .login-put #div1 {
	padding-left: 32%;
}

.kuang .login-put #div1 textarea {
	outline: none;
	border: 1px solid #dddddd;
	color: #999999;
	float: left;
	height: 139px;
	line-height: 22.5px;
	resize: none;
	font-size: 12px;
	margin-left: 10px;
	padding: 0 5px;
